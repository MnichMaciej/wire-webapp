pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                sh 'ls -al'
                sh 'pwd'
                echo "TAG: ${TAG}"
                sh "git checkout tags/${TAG}"
            }
        }
        stage('Build'){
            step{
                dir('/var/jenkins_home/workspace/LAB07/MM400503/Docker'){
                    sh 'pwd'
                    sh 'ls'
                }
            }
        }
    }

}
